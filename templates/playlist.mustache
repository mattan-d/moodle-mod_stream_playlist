{{!
    @template mod_stream/playlist

    Playlist view for stream videos

    Example context (json):
    {
        "cmid": 123,
        "includeaudio": false,
        "videos": [
            { "id": "vid1", "title": "Video 1", "thumbnail": "url/to/thumb1.jpg", "duration": "10:00", "active": true, "viewed": true },
            { "id": "vid2", "title": "Video 2", "thumbnail": "url/to/thumb2.jpg", "duration": "05:30", "viewed": false }
        ],
        "initial_player": "<iframe...>",
        "show_playlist": true,
        "auto_play_playlist": true
    }
}}
<div class="stream-playlist-container {{#show_playlist}}with-playlist{{/show_playlist}}{{^show_playlist}}single-video{{/show_playlist}}" 
     data-cmid="{{cmid}}" 
     data-includeaudio="{{includeaudio}}"
     data-autoplayplaylist="{{auto_play_playlist}}">
    {{#show_playlist}}
    <div class="stream-playlist-sidebar">
        {{#auto_play_playlist}}
        <div class="playlist-controls mb-3">
            <div class="alert alert-info">
                <i class="fa fa-play-circle"></i> {{#str}}autoplayenabled, mod_stream{{/str}}
            </div>
        </div>
        {{/auto_play_playlist}}
        <ul class="list-group">
            {{#videos}}
            <li class="list-group-item playlist-item {{#active}}active{{/active}}" data-identifier="{{id}}">
                <div class="playlist-item-content">
                    <img class="playlist-thumbnail" src="{{thumbnail}}" alt="{{title}}">
                    <div class="playlist-item-details">
                        <div class="playlist-item-title">{{title}}</div>
                        <div class="playlist-item-duration">{{duration}}</div>
                        {{#viewed}}
                            <span class="badge badge-success playlist-viewed-badge">{{#str}}viewed, mod_stream{{/str}}</span>
                        {{/viewed}}
                    </div>
                </div>
            </li>
            {{/videos}}
        </ul>
    </div>
    {{/show_playlist}}
    <div class="stream-main-video">
        {{{initial_player}}}
    </div>
</div>
